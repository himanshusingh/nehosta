<% provide(:title, "Edit profile") %> 
<div class="gen-section-heading">
  <h4>Update profile</h4>
</div>
<div class="gen-section-body">
  <%= simple_form_for(@user, html: {class: "form-horizontal"} ) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :sex, collection: ['male', 'female'], as: :radio_buttons, item_wrapper_class: 'inline' %>
    <%= f.input :birthday, as: :date, start_year: Date.today.year-100, end_year: Date.today.year-1, input_html: { class: "span2"} %>
    <%= f.input :description, label: "About me", input_html: { class: "span6", rows: "12"} %>
    <%= f.input :location %>
    <%= f.input :avatar, label: "Photo" %>
    <div class="form-actions">
     <%= f.submit "Save changes", class: "btn btn-large btn-custom" %>
    </div>
  <% end %>
</div>