<% provide(:title, 'Add Space') %>
<h1> Add your Space </h1>
<%= form_for @space, html: {class: "form-horizontal"} do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="control-group">
		<%= f.label :name, class: "control-label" %>
		<div class="controls">
			<%= f.text_field :name %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :bedrooms, class: "control-label" %>
		<div class="controls">
      		<%= f.select(:bedrooms, bedroom_options) %>
      	</div>
    </div>
    <div class="control-group">
    	<%= f.label :bathrooms, class: "control-label" %>
    	<div class="controls">
   		    <%= f.select(:bathrooms, bathroom_options) %>
   		</div>
   	</div>
   	<div class="control-group">
      	<%= f.label :room_type, "What do you offer?", class: "control-label" %>
      	<div class="controls">
      		<%= f.select(:room_type, room_types) %>
     	</div>
    </div>
    <div class="control-group">
    	<div class="controls">
    		<%= f.submit "Add my space", class: "btn btn-large" %>
    	</div>
    </div>
<% end %>
